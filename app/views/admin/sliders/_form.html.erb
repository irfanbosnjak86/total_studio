
<%= simple_form_for @slider, html: { multipart: true } do |f| %>
  <% if @slider.errors.any? %>
    <div class="errors">
      <p><%= @slider.errors.count %> Onemogucilo postavljanje slidera!</p>
      <ul>
        <% @slider.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel-body">
    <%= f.input :slider_name, input_html: { class: 'form-control' } %>

    <div class="slider-image">
      <%= f.simple_fields_for :slider_images do |slider| %>
      
        <% if f.object.new_record? %>
          <div class="newslider">
            <%= slider.file_field :image, f: slider, class: "btn btn-primary" %>
            <br>
          </div>
          <% else %>

            <% unless slider.object.image.blank? %>
            <div class="slideimages">
              <%= image_tag slider.object.image.url('medium') %>

            <% end %>
              <%= slider.file_field :image, f: slider, class: "btn btn-primary" %>
            </div>
        <% end %>
      <% end %>
      <br>
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  </div>
    
  
<% end %>
