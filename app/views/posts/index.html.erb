<div class="container" id="indexBlog">
	<div class="row">
		<% @posts.in_groups_of(4, false).each do |group|  %>
			<div class="row">
				<% group.each do |post| %>
					<div class="col-md-3">
						<div class="post">
							<div>	
							<% if post.post_images.present? %>					
								<%= link_to post do %>
									<%= image_tag post.post_images.first.photo.url(:medium) %>
								<% end %>
								<% else %> 
									<%= link_to post.title, post %>
								<% end %>
							</div>

							<h2 class="title" id="postTitle"><%= link_to post.title, post %></h2>
							<p class="date"><%= post.created_at.strftime("%B, %d, %Y") %></p>
						</div>
					</div>			
				<% end %>
			</div>	
		<% end %>
	</div>
	<div class="container">
		<div class="row">
		 	<%= paginate @posts %> 
		</div>
	</div>
</div>
