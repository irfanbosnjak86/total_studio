<!DOCTYPE html>
<html>
<head>
  <title>TotalStudio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<div class="navbar navbar-inverse navbar-fixed-top" id="mojNavBlog" role="navigation">
      <div class="navbar-header">
        <div class="container" id="mojButton">
          <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button" id="menibutton">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
        
          </button>

      </div><!-- navbar-header -->    

      <div class="navbar-collapse collapse" id="navBlog">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to "Home", root_path %>  
          </li>
          <li class="dropdown">
            <%= link_to blog_path(@posts), { class: 'dropdown-toggle disabled', 'data-toggle' => 'dropdown' } do %>
            Blog
             <span class="caret"></span>
            <% end %>
              <ul class="dropdown-menu">
                  <li>
                    <%= link_to "Venacanja", blog_path(:category_name => "Vencanje") %>
                  </li>
                  
                  <li>
                    <%= link_to "Foto Model", blog_path(:category_name => "Foto Model") %>
                  </li>
                  
                  <li>
                    <%= link_to "Usluge", blog_path(:category_name => "Usluge") %>
                  </li>
              </ul>
          </li>
          <li>
            <%= link_to "O nama", o_nama_path %>
          </li>
          <li>
            <a href="#">Kontakt</a>
          </li>
          <% if admin_signed_in? %>
            <li class="dropdown">
                <%= link_to "#", { class: 'dropdown-toggle disabled', 'data-toggle' => 'dropdown' } do %>
                Admin 
                <span class="glyphicon glyphicon-user"></span>
                <% end %>

              <ul class="dropdown-menu">
                  <li>
                    <%= link_to "Novi Post", new_post_path %>
                  </li>
                  <li>
                    <%= link_to "Sign Out", destroy_admin_session_path, method: :delete %>
                  </li>
              </ul>
            </li>
          <% end %>
        </ul><!-- end navbar-nav -->
      </div><!-- navbar-inverse -->
  </div><!-- end navbar-container -->
</div><!-- end navbar mojNav -->

  <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert") %>
  <% end %><!-- end flash msg -->

  <%= yield %>

<!-- First try for the online version of jQuery
  <script src="http://code.jquery.com/jquery.js"></script>-->

</body>
</html>