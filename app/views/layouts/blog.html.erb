<!DOCTYPE html>
<html>
<head>
  <title>TotalStudio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">

<div class="navbar navbar-inverse navbar-fixed-top" id="mojNavBlog" role="navigation">
  
      <div class="navbar-header">
        <div class="container" id="mojButton">
          <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button" id="menibutton">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          
          </button>
        </div>
      </div><!-- navbar-header -->    
      
      <div class="navbar-collapse collapse" id="navBlog">
      <div class="container">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to "Home", root_path %>  
          </li>
          <li class="dropdown">
            <%= link_to blog_path(@posts), { class: 'dropdown-toggle disabled', 'data-toggle' => 'dropdown' } do %>
            Blog
             <span class="caret"></span>
            <% end %>
              <ul class="dropdown-menu">
                  <li>
                    <%= link_to blog_path(:category_name => "Vencanje") do %>
                      <span class="glyphicon glyphicon-heart-empty"></span> Vencanja
                    <% end %>
                  </li>
                  
                  <li>
                    <%= link_to blog_path(:category_name => "Foto Model") do %>
                      <span class="glyphicon glyphicon-camera"></span> Foto Model
                    <% end %>
                  </li>
                  
                  <li>
                    <%= link_to blog_path(:category_name => "Usluge") do %>
                      <span class="glyphicon glyphicon-cog"></span> Usluge
                    <% end %>

                  </li>
              </ul>
          </li>
          <li id="logo">
              <%= image_tag('Logocrni.png') %>
          </li>
          <li>
            <%= link_to "O nama", o_nama_path, class: "desno" %>
          </li>
          <li>
            <a href="#" class="desno">Kontakt</a>
          </li>
          
        </ul><!-- end navbar-nav -->
      <% if admin_signed_in? %>
            <div class="dropdown">
                <%= link_to "#", { class: 'dropdown-toggle disabled', 'data-toggle' => 'dropdown' } do %>
                  <span class="glyphicon glyphicon-user"></span> Admin 
                <% end %>

              <ul class="dropdown-menu" id="admin">
                  <li>
                    <%= link_to edit_admin_slider_path(@slider = Slider.last) do %>
                      <span class="glyphicon glyphicon-film"></span> Slider Edit
                    <% end %>
                  </li>
                  <li>
                    <%= link_to new_post_path do %>
                      <span class="glyphicon glyphicon-film"></span> Novi Post
                    <% end %>
                  </li>
                  <li>
                    <%= link_to destroy_admin_session_path, method: :delete do %>
                      <span class="glyphicon glyphicon-off"></span> Sing Out
                    <% end %>
                  </li>
              </ul>
            </div>
          <% end %>
      </div><!-- navbar-inverse -->
  </div><!-- end navbar-container -->
  </div>
</div><!-- end navbar mojNav -->




<% flash.each do |type, message| %>
  <div class="alert <%= bootstrap_class_for(type) %> fade in">
    <button class="close" data-dismiss="alert">×</button>
    <%= message %>
  </div>
<% end %><!-- end flash msg -->

  <%= yield %>
</div>

<div class="footer">
  <div class="row">
    <center>
      <ul>
        <li>
          <%= link_to('https://www.facebook.com/vladimir.milic1?fref=ts') do %>
            <i class="fa fa-facebook-official fa-3x"></i>
          <% end %>
        </li>
        <li>
          <%= link_to('https://www.youtube.com/user/totalstudiokm') do %>
            <i class="fa fa-youtube-square fa-3x"></i>
          <% end %>
        </li>
        <li>
          <%= link_to('https://www.facebook.com/vladimir.milic1?fref=ts') do %>
           <i class="fa fa-share-alt-square fa-3x"></i>
          <% end %>
        </li>
      </ul>
    </center>
  </div>
  <div class="row" id="copyright">
    <p>Copyright © 2016 | Vladimir Milić - TOTALSTUDIO | Kosovska Mitrovica | Worldwide </p>
    <p>Irfan Bošnjak</p>
  </div>
</div>
</body>
</html>